{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false
  },
  "include": ["src/backend/**/*", "src/cli/**/*", "prisma/generated/**/*"],
  "exclude": ["node_modules", ".next", "dist"]
}
