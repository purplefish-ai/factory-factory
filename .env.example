# Database Configuration
POSTGRES_USER=factoryfactory
POSTGRES_PASSWORD=factoryfactory_dev
POSTGRES_DB=factoryfactory
DATABASE_URL="postgresql://factoryfactory:factoryfactory_dev@localhost:5432/factoryfactory?schema=public"

# Claude API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Inngest Configuration
INNGEST_EVENT_KEY=your_inngest_event_key_here
INNGEST_SIGNING_KEY=your_inngest_signing_key_here

# Git Configuration
# Path to the main repository (e.g., ~/Programming/monorepo)
GIT_BASE_REPO_PATH=/Users/yourusername/Programming/monorepo
# Base directory where worktrees will be created
GIT_WORKTREE_BASE=/tmp/factoryfactory-worktrees

# Tmux Configuration (optional)
# TMUX_SOCKET_PATH=/tmp/factoryfactory-tmux

# Server Configuration
BACKEND_PORT=3001
FRONTEND_PORT=3000

# Optional: Model Override
# CLAUDE_MODEL=claude-sonnet-4-0-20250514

# Optional: Permission Modes
# REQUIRE_HUMAN_APPROVAL=true

# Optional: Notification Settings
# ENABLE_NOTIFICATIONS=false
